{
  "name": "dmm76/mercadinho",
  "description": "Mercadinho Borba Gato - MVC minimal scaffold",
  "type": "project",
  "require": {
    "php": ">=8.0",
    "vlucas/phpdotenv": "^5.6"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.6",
    "phpstan/phpstan": "^1.10",
    "friendsofphp/php-cs-fixer": "^3.58"
  },
  "autoload": {
    "psr-4": { "App\\": "app/" }
  },
  "scripts": {
    "test": "phpunit --colors=always",
    "stan": "phpstan analyse app --level=max",
    "cs": "php-cs-fixer fix --dry-run -v",
    "fix": "php-cs-fixer fix -v"
  },
  "config": {
    "platform": { "php": "8.0.30" }
  }
}
